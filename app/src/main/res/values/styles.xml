<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Settings_Fragment_Text_Style" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:drawablePadding">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_7sdp</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
    </style>


    <style name="dialog_style_simple" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.60</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateUnchanged</item>
    </style>
</resources>